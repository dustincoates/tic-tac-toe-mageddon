<h1>Tic-Tac-Toe</h1>

<div class="game-board">
  <div class="row-0">
    <div data-square="0" data-column="0"></div>
    <div data-square="1" data-column="1"></div>
    <div data-square="2" data-column="2"></div>
  </div>
  <div class="row-1">
    <div data-square="3" data-column="0"></div>
    <div data-square="4" data-column="1"></div>
    <div data-square="5" data-column="2"></div>
  </div>
  <div class="row-2">
    <div data-square="6" data-column="0"></div>
    <div data-square="7" data-column="1"></div>
    <div data-square="8" data-column="2"></div>
  </div>
</div>

<div class="game-stats">
  <div class="player-stats">
    <h3>Your Score</h3>
    <span id="player-score"></span>
  </div>
  <div class="computer-stats">
    <h3>Computer Score</h3>
    <span id="computer-score"></span>
  </div>
</div>